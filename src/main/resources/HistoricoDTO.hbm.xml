<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.HistoricoDTO" table="historico" schema="BIBLIOTECA">
        <id name="idHistorico">
            <column name="idHistorico" sql-type="int"/>
        </id>
        <property name="user">
            <column name="user" sql-type="text" not-null="true"/>
        </property>
        <property name="fecha">
            <column name="fecha" sql-type="datetime" not-null="true"/>
        </property>
        <property name="info">
            <column name="info" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>